<!-- あつまれどうぶつの森カブ価掲示板 -->
<div class="turnip">
  <section class="turnip-contents">
    <div class="turnip-contents-form">
	  <%= form_for(@turnip) do |f| %>
	  <table>
	  	<tbody>
	  	  <tr>
	  	  	<td><%= f.label :name, "島名" %></td>
	  	    <td><%= f.text_field :name %></td>
 	  	  	<td>島</td>
	  	  </tr>
	      <tr>
	      	<td><%= f.label :price, "カブ価" %></td>
	        <td><%= f.number_field :price %></td>
 	  	  	<td>ベル</td>
	      </tr>
	      <tr>
	      	<td><%= f.label :islandpass, "島パスワード" %></td>
	        <td><%= f.text_field :islandpass %></td>
	      </tr>
	      <tr>
	        <td><%= f.label :started_at, "開放時間目安" %></td>
	        <td><%= f.time_select :started_at %>〜<%= f.time_select :finished_at %></td>
	      </tr>
	      <tr>
	        <td><%= f.label :want, "求む" %></td>
	        <td><%= f.text_area :want, value: @request %></td>
	      </tr>
	      <tr>
			<td><%= f.submit "投稿" %></td>
	      </tr>
	    </tbody>
	  </table>
	  <% end %>
    </div>
  </section>
  <% @turnips.each do |turnip| %>
    <div class="turnip-contents-box">
 	  <table>
 	  	<tbody>
 	  	  <tr>
 	  	  	<td>島名</td>
 	  	  	<td><%= turnip.name %></td>
 	  	  </tr>
 	  	  <tr>
 	  	  	<td>カブ価</td>
 	  	  	<td><%= turnip.price %></td>
 	  	  </tr>
 	  	  <tr>
 	  	  	<td>島パスワード</td>
 	  	  	<td><%= turnip.islandpass %></td>
 	  	  </tr>
 	  	  <tr>
 	  	  	<td>開放時間目安</td>
 	  	  	<td><%= turnip.started_at.strftime("%H時%M分") %>〜<%= turnip.finished_at.strftime("%H時%M分") %></td>
 	  	  </tr>
 	  	  <tr>
 	  	  	<td>求む</td>
 	  	  	<td><%= turnip.want %></td>
 	  	  </tr>
 	  	</tbody>
 	  </table>
    </div>
  <% end %>
</div>